<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrismStarbucksApp.Views.Commons.HeaderView">
    <Grid Grid.Row="0"
					ColumnDefinitions="*,*,*"
					Padding="0,10">
				<Border x:Name="icHambuger"
								Grid.Column="0"
								HorizontalOptions="Start"
								Style="{StaticResource EllipseBorderStyle}">
						<Border.GestureRecognizers>
								<TapGestureRecognizer Tapped="HambugerTapped"/>
						</Border.GestureRecognizers>
						<Image Source="humberger_menu.png"
						 x:Name="imgHambuger"
										HorizontalOptions="Center"
										VerticalOptions="Center"/>
				</Border>
				<Image Grid.Column="1"
								Style="{StaticResource ImgBrandStyle}"/>
				<Border Grid.Column="2"
								HorizontalOptions="End"
								Style="{StaticResource EllipseBorderStyle}"
								Padding="12">
						<Image Source="shop_bag.png"
										HorizontalOptions="Center"
										VerticalOptions="Center"/>
				</Border>
		</Grid>
</ContentView>

