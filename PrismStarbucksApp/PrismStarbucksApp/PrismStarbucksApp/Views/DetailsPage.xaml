<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Session02.Controls"
             xmlns:commons="clr-namespace:PrismStarbucksApp.Views.Commons"
             x:Class="PrismStarbucksApp.Views.DetailsPage"
             x:Name="DetailView"
             Title="DetailsPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid Margin="0,5"
              Padding="15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!---TODO: Add a new prop to Header to show favourite icon at right corner-->
            <commons:HeaderView IconHambuger="back_arrow.png"
                                HambugerCommand="{Binding BackCommand}"/>
            
            <ScrollView Grid.Row="1"
                        Margin="-15,0"
                        Padding="15,0">
                <StackLayout Orientation="Vertical">
                    <Grid Margin="0,0,0,20">
                        <Border BackgroundColor="{Binding SelectedProduct.ProductImgBackground}"
                                Padding="0,30,0,85">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="15"/>
                            </Border.StrokeShape>
                            <Image Source="{Binding SelectedProduct.ProductImgUrl}"
                                   Aspect="AspectFit"
                                   HeightRequest="220"/>
                        </Border>

                        <!--TODO: Add LabelStepper and display correct position in cardview-->

                    </Grid>

                    <!--TODO: Add the view is missed-->

                    <Grid ColumnDefinitions="*,Auto,Auto"
                          Margin="0,10">
                        <HorizontalStackLayout Grid.Column="0"
                                               Spacing="10"
                                               x:Name="SizeRadioGroup"
                                               RadioButtonGroup.GroupName="Size"
                                               RadioButtonGroup.SelectedValue="{Binding SelectedProduct.ProductSizeType}"
                                               BindableLayout.ItemsSource="{StaticResource SizeArray}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton Content="{Binding .}"
                                                 Value="{Binding .}">
                                        <RadioButton.ControlTemplate>
                                            <ControlTemplate>
                                                <Grid RowDefinitions="*,Auto"
                                                      RowSpacing="5">
                                                    <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroupList>
                                                            <VisualStateGroup x:Name="CheckedStates">
                                                                <VisualState x:Name="Checked">
                                                                    <VisualState.Setters>
                                                                        <Setter
                                                                        TargetName="SizeLabel"
                                                                        Property="Label.TextColor"
                                                                        Value="{StaticResource Primary}"/>
                                                                        <Setter
                                                                        TargetName="SquareBorderView"
                                                                        Property="Border.BackgroundColor"
                                                                        Value="{StaticResource Primary}"/>
                                                                    </VisualState.Setters>
                                                                </VisualState>

                                                                <VisualState x:Name="Unchecked">
                                                                    <VisualState.Setters>
                                                                        <Setter
                                                                        TargetName="SizeLabel"
                                                                        Property="Label.TextColor"
                                                                        Value="{StaticResource Gray500}"/>
                                                                        <Setter
                                                                        TargetName="SquareBorderView"
                                                                        Property="Border.BackgroundColor"
                                                                        Value="{StaticResource Gray100}"/>
                                                                    </VisualState.Setters>
                                                                </VisualState>
                                                            </VisualStateGroup>
                                                        </VisualStateGroupList>
                                                    </VisualStateManager.VisualStateGroups>
                                                    <Border Grid.Row="0" 
                                                            x:Name="SquareBorderView"
                                                            StrokeThickness="0"
                                                            WidthRequest="80"
                                                            HeightRequest="80">
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="5"/>
                                                        </Border.StrokeShape>
                                                        <Image Aspect="Center">
                                                            <Image.Triggers>
                                                                <DataTrigger TargetType="Image"
                                                                             Binding="{TemplateBinding Content}"
                                                                             Value="Tall">
                                                                    <Setter Property="Source" Value="tall.png"/>
                                                                </DataTrigger>
                                                                <DataTrigger TargetType="Image"
                                                                             Binding="{TemplateBinding Content}"
                                                                             Value="Grande">
                                                                    <Setter Property="Source" Value="grande.png"/>
                                                                </DataTrigger>
                                                                <DataTrigger TargetType="Image"
                                                                             Binding="{TemplateBinding Content}"
                                                                             Value="Venti">
                                                                    <Setter Property="Source" Value="venti.png"/>
                                                                </DataTrigger>
                                                            </Image.Triggers>
                                                        </Image>
                                                    </Border>
                                                    <Label Grid.Row="1" 
                                                           x:Name="SizeLabel"
                                                           HorizontalTextAlignment="Center"
                                                           FontFamily="RalewayRegular"
                                                           Text="{TemplateBinding Content}"
                                                           FontSize="16"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </RadioButton.ControlTemplate>
                                    </RadioButton>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </HorizontalStackLayout>
                        <BoxView Grid.Column="1" 
                                 WidthRequest="1"
                                 Background="#B5B5B5"
                                 HorizontalOptions="Start"
                                 Margin="-10,15,0,35"/>
                        <Label Grid.Column="2"
                               x:Name="PriceLabel"
                               HorizontalOptions="StartAndExpand"
                               VerticalOptions="Center"
                               Margin="0,0,0,20"
                               Text="{Binding SelectedProduct.ProductPrice, StringFormat='${0}.00'}"
                               TextColor="{StaticResource Primary}"
                               FontFamily="PoppinsRegular"
                               FontSize="25">
                        </Label>
                    </Grid>
                </StackLayout>
            </ScrollView>
            <Button Grid.Row="2" Text="Add to bag"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="End"
                    FontFamily="RalewayMedium"
                    FontSize="20"
                    Background="{StaticResource PrimaryBrush}"
                    TextColor="White"
                    CornerRadius="30"
                    HeightRequest="55"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>

