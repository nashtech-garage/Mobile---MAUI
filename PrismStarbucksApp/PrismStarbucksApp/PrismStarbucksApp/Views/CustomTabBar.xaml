<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrismStarbucksApp.Views.CustomTabBar"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             ios:Page.UseSafeArea="False"
             NavigationPage.HasNavigationBar="False"
             x:Name="BaseTabBar"
             Title="CustomTabBar">
    <ContentPage.Content>
        <Grid HorizontalOptions="FillAndExpand"
              VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="viewRowHeight"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ContentView Content="{Binding ViewContent, Source={x:Reference BaseTabBar}}"
                         HorizontalOptions="FillAndExpand"
                         VerticalOptions="FillAndExpand">
                
            </ContentView>
            <Frame Grid.Row="1"
                   Padding="0"
                   HasShadow="False"
                   BorderColor="{DynamicResource Primary}"
                   BackgroundColor="{DynamicResource Primary}"
                   HeightRequest="66"
                   CornerRadius="33"
                   VerticalOptions="End"
                   IsClippedToBounds="False">
                <Grid ColumnDefinitions="*,*,*,*">
                    <ImageButton Grid.Column="0" 
                                 Source="home.png"
                                 Aspect="Center"
                                 Padding="12"
                                 Command="{Binding HomeCommand, Source={x:Reference BaseTabBar}}">
                        <!--<ImageButton.Behaviors>
                            <mct:IconTintColorBehavior TintColor="{StaticResource White}"/>
                        </ImageButton.Behaviors>-->
                    </ImageButton>
                    <ImageButton Grid.Column="1" 
                                 Source="wallet.png"
                                 Padding="12"
                                 Aspect="Center"
                                 Command="{Binding WalletCommand, Source={x:Reference BaseTabBar}}">
                        <!--<ImageButton.Behaviors>
                            <mct:IconTintColorBehavior TintColor="{StaticResource White}"/>
                        </ImageButton.Behaviors>-->
                    </ImageButton>
                    <ImageButton Grid.Column="2" 
                                 Source="fav.png"
                                 Padding="12"
                                 Aspect="Center"
                                 Command="{Binding FavCommand, Source={x:Reference BaseTabBar}}">
                        <!--<ImageButton.Behaviors>
                            <mct:IconTintColorBehavior TintColor="{StaticResource White}"/>
                        </ImageButton.Behaviors>-->
                    </ImageButton>
                    <ImageButton Grid.Column="3" 
                                 Source="notification.png"
                                 Padding="12"
                                 Aspect="Center"
                                 Command="{Binding NotificationCommand, Source={x:Reference BaseTabBar}}">
                        <!--<ImageButton.Behaviors>
                            <mct:IconTintColorBehavior TintColor="{StaticResource White}"/>
                        </ImageButton.Behaviors>-->
                    </ImageButton>
                </Grid>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>

